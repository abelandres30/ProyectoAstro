---

interface Props {
	name: string; 
	url: string;
    page?: number;
}

const { name, url, page } = Astro.props;
const id = url.split('/').at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${ id }.png` 

---
<a href={`/pokemonPage/${page}/${name}`}
    class="rounded flex flex-col justify-center items-center p-2
        box-shadow: var(--shadow-2xl);">
    
    <img transition:name={`${name}-image`} src={imageSrc} alt={name}>
    <span class="text-white capitalize">{name}</span>
</>